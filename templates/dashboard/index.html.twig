{# templates/dashboard.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 flex text-black">
        {# Sidebar #}
        <aside class="w-64 bg-white shadow-md">
            <div class="p-6 text-xl font-bold border-b">
                MyApp
            </div>
            <nav class="mt-6">
                <a href="#" class="block py-2 px-6 text-gray-700 hover:bg-gray-200">Home</a>
                <a href="#" class="block py-2 px-6 text-gray-700 hover:bg-gray-200">Profile</a>
                <a href="#" class="block py-2 px-6 text-gray-700 hover:bg-gray-200">Settings</a>
                <a href="#" class="block py-2 px-6 text-gray-700 hover:bg-gray-200">Logout</a>
            </nav>
        </aside>

        {# Main content #}
        <main class="flex-1 p-8">
            <header class="mb-6">
                <h1 class="text-3xl font-semibold">Welcome !</h1>
                <p class="text-gray-600 mt-1">Here's your dashboard overview.</p>
            </header>

            {# Dashboard cards #}
            <div class="grid grid-cols-3 gap-6">
                <div class="bg-white p-6 rounded-lg shadow">
                    <h2 class="text-lg font-medium">Total Users</h2>
                    <p class="mt-2 text-2xl font-bold">123</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow">
                    <h2 class="text-lg font-medium">Active Sessions</h2>
                    <p class="mt-2 text-2xl font-bold">45</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow">
                    <h2 class="text-lg font-medium">Messages</h2>
                    <p class="mt-2 text-2xl font-bold">7</p>
                </div>
            </div>

            {# Optional recent activity table #}
            <section class="mt-8">
                <h2 class="text-xl font-semibold mb-4">Recent Activity</h2>
                <table class="w-full bg-white rounded-lg shadow overflow-hidden">
                    <thead class="bg-gray-200">
                    <tr>
                        <th class="py-2 px-4 text-left">Date</th>
                        <th class="py-2 px-4 text-left">Action</th>
                        <th class="py-2 px-4 text-left">User</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr class="border-b">
                        <td class="py-2 px-4">2026-01-15</td>
                        <td class="py-2 px-4">Logged in</td>
                        <td class="py-2 px-4"></td>
                    </tr>
                    <tr class="border-b">
                        <td class="py-2 px-4">2026-01-14</td>
                        <td class="py-2 px-4">Updated profile</td>
                        <td class="py-2 px-4"></td>
                    </tr>
                    </tbody>
                </table>
            </section>
        </main>
    </div>
{% endblock %}
